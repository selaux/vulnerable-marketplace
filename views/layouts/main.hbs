<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ pageTitle }}</title>
    </head>
    <body>
        {{#if showLogin}}
            {{#if loggedIn}}
                <p>Welcome, {{ loggedInAs }}. <a href="/logout">Logout</a></p>
            {{else}}
                <p>Welcome, please <a href="/login?redirectTo={{ currentUrl }}">login</a>.</p>
            {{/if}}
        {{/if}}
        {{{ body }}}
    </body>
</html>